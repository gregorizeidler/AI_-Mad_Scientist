# AI Mad Scientist - Environment Variables Example
# Copy this file to .env and replace the placeholder values with your actual credentials

# OpenAI API Key - Required
# Get your API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Default Model - Optional
# Default model to use for agents (gpt-4, gpt-4-turbo, gpt-3.5-turbo, etc.)
# If not specified, gpt-4 will be used
DEFAULT_MODEL=gpt-4

# Organization ID - Optional
# Only required if you belong to multiple organizations in OpenAI
# OPENAI_ORG_ID=your_organization_id

# Application Settings - Optional
# Default temperature for agents
DEFAULT_TEMPERATURE=0.7

# Explosive Agent Temperature - Optional
# Default temperature for the ExplosiveGPT agent
EXPLOSIVE_TEMPERATURE=1.0

# PDF Export Settings - Optional
# Directory where PDF exports will be saved
PDF_EXPORT_DIR=saved_theories

# Debug Mode - Optional
# Set to TRUE to enable debug mode with additional logging
DEBUG_MODE=FALSE 
